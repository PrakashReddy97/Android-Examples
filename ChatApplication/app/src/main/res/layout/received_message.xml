<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/image_profile_sender"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:background="@drawable/circle"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prakash Reddy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_profile_sender"
        android:id="@+id/message_name"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_body"
        android:text="Hello, Where are you"
        app:layout_constraintTop_toBottomOf="@id/message_name"
        app:layout_constraintLeft_toRightOf="@id/image_profile_sender"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:textColor="#000"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:background="@drawable/rounded_rectangle"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receive_time"
        android:textSize="10sp"
        android:text="13.00"
        app:layout_constraintLeft_toRightOf="@id/message_body"
        app:layout_constraintBottom_toBottomOf="@id/message_body"
        android:layout_marginLeft="4dp"/>




</android.support.constraint.ConstraintLayout>